<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); %>
</head>
<body>
    <div class="d-flex flex-column h-100" id="root">
        <%- include('partials/navbar'); %>
        <div class="container-fluid h-100">
            <div class="row h-100">
                <%- include('partials/sidebar');  %> 
                <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 d-flex flex-column">
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                      <h1 class="h2">Visos užduotys</h1>
                      <div class="btn-toolbar mb-2 mb-md-0">
                        <span data-feather="plus" id="task-add-icon"></span>
                        <form action="/api/addTask" method="post" id="task-add-form">
                            <input placeholder="Pridėti užduotį..." type="text" name="taskName" id="task-add-input" required>
                        </form>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center h-100">
                        <div class="col-10 d-flex main-area justify-content-center align-items-center flex-column">
                            <div class="spinner-grow" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                            <div id="no-tasks-notification" hidden>
                                <span class="m-auto" data-feather="smile" id="no-tasks-icon"></span>
                                <h2>Jūs neturite nei vienos neatliktos užduoties</h2>
                            </div>
                            <div id="task-list">

                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <template id="task-template">
        <div class="d-flex flex-column border-bottom task m-1">
            <div class="d-flex flex-row m-1">
              <input type="checkbox" id="" class="mr-2">
              <label class="task-label"></label>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit ms-auto" id="task-edit-icon" data-bs-toggle="modal" data-bs-target="#editTaskModal" style="cursor: pointer;">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
              </svg>
            </div>
            <small class="text-muted" style="margin-left: 1.25rem;"></small>
            
        </div>
    </template>

    <div class="modal fade" id="editTaskModal" tabindex="-1" aria-labelledby="editTaskModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editTaskModalLabel">Edit task</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="edit-task-form">
                <input type="hidden" id="edit-task-id-hidden">
                <div class="mb-3">
                  <label for="task-edit-title" class="col-form-label">Title:</label>
                  <input type="text" class="form-control" id="task-edit-title">
                </div>
                <div class="mb-3">
                  <label for="task-edit-comment" class="col-form-label">Comment:</label>
                  <textarea class="form-control" id="task-edit-comment"></textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="task-edit-submit" data-bs-dismiss="modal">Complete edit</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    <%- include('partials/scripts'); %>
    <script src="/js/index.js"></script>
</body>
</html>